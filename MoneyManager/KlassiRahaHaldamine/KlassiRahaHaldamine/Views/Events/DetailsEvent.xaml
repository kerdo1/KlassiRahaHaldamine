<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KlassiRahaHaldamine.Views.Events.EventDetails"
             Title="Ürituse detailid">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Button Grid.Column="0"
                Margin="0,0,0,20"
                Text="↩ Tagasi"
                TextColor="#2D4D3A"
                FontSize="Small"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                Clicked="OnBackToEventsClicked"/>

        <Label Text="Ürituse nimi" FontAttributes="Bold" />
        <Label x:Name="EventNameLabel" />

        <Label Text="Kuupäev" FontAttributes="Bold" />
        <Label x:Name="EventDateLabel" />

        <Label Text="Kirjeldus" FontAttributes="Bold" />
        <Label x:Name="EventDescriptionLabel" />

        <Label Text="Hind" FontAttributes="Bold" />
        <Label x:Name="EventPriceLabel" />

    </VerticalStackLayout>

</ContentPage>
