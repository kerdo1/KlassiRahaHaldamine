<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="KlassiRahaHaldamine.Views.Students.StudentsIndex"
             Title="Students">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="20">

            <Grid>
                <Button Grid.Column="0"
                    Text="Tagasi"
                    HorizontalOptions="Start"
                    Clicked="OnBackEventClicked"/>
                <Button Grid.Column="1" 
                    Text="Lisa õpilane" 
                    HorizontalOptions="End"
                    Clicked="OnCreateStudentClicked" />
            </Grid>

            <CollectionView 
                x:Name="StudentsCollectionView"
                ItemsSource="{Binding Students}"
                SelectionMode="None"
                EmptyView="No students available.">


                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnSpacing="20">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackLayout Orientation="Horizontal" Grid.Column="0" Spacing="10" HorizontalOptions="Start" VerticalOptions="End">
                                <Frame x:Name="WalletFrame"                                 
                                       BorderColor="Black"
                                       CornerRadius="4"
                                       Padding="5,3">
                                    <Label Text="{Binding Amount}"                              
                                           FontAttributes="Bold" 
                                           FontSize="Medium" 
                                           VerticalOptions="Center" />
                                </Frame>
                                <Label Text="{Binding FirstName}" 
                                       FontAttributes="Bold" 
                                       FontSize="Small" 
                                       VerticalOptions="Center" 
                                       HorizontalOptions="Start" />

                                <Label Text="{Binding LastName}" 
                                       FontAttributes="Bold" 
                                       FontSize="Small" 
                                       VerticalOptions="Center" 
                                       HorizontalOptions="Start" />
                            </StackLayout>

                            <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="10" HorizontalOptions="End">

                                <Button Text="?" 
                                        FontSize="Medium"

                                        CornerRadius="4" 
                                        Padding="10,5"
                                        Clicked="OnDetailsClicked"
                                        CommandParameter="{Binding .}"
                                         />
                                <Button Text="✏️"                                    
                                        CornerRadius="4" 
                                        Padding="5,3"
                                        Clicked="OnEditClicked"
                                        CommandParameter="{Binding .}"/>


                                <Button Text="🗑️"                                        
                                        CornerRadius="4" 
                                        Padding="5,3"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding .}"/>
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
    