<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="KlassiRahaHaldamine.Views.Students.StudentsIndex"
             Title="Õpilased">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Margin="0,50,0,0"
            Spacing="25">

            <Button 
                Text="Lisa õpilane" 
                HorizontalOptions="Center"
                Clicked="OnCreateStudentClicked"
               />

            <ListView x:Name="StudentsListView" 
                          ItemsSource="{Binding Students}"
                          HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical" Padding="50">
                                <HorizontalStackLayout Spacing="20">
                                    <Label Text="{Binding FirstName}" 
                                           FontAttributes="Bold" 
                                           FontSize="Medium" 
                                           VerticalOptions="Center" 
                                           HorizontalOptions="CenterAndExpand" />
                                    <Label Text="{Binding LastName}" 
                                           FontAttributes="Bold" 
                                           FontSize="Medium" 
                                           VerticalOptions="Center" 
                                           HorizontalOptions="CenterAndExpand" />
                                    <Label Text="{Binding Amount}" 
                                           FontAttributes="Bold" 
                                           FontSize="Medium" 
                                           VerticalOptions="Center" 
                                           HorizontalOptions="CenterAndExpand" />
                                </HorizontalStackLayout>

                                

                                <!-- Nupud: Detailid, Muuda, Kustuta -->
                                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                    <Button Text="Detailid"   />
                                    <Button Text="Muuda" Clicked="OnUpdateStudentClicked" />
                                        <Button Text="Kustuta"  />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>